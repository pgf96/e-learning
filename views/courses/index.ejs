<%- include('../partials/header', {active: "Index" }) %>

<div class="container-fluid banner-home d-flex align-items-center">
  <div class="container">
    <div class="row gx-4 row-cols-3 justify-content-start overflow-hidden">
      <div class="col-7">
        <h1>
          Learn from the Best and Become an Expert in Your Field with Our
          Courses
        </h1>
        <h5>
          Design and host your own courses, or discover a world of knowledge
          with our selection.
        </h5>
      </div>
      <div class="col-5">
        <div class="row">
          <img
            class="img-fluid"
            src="https://images.unsplash.com/photo-1501504905252-473c47e087f8?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2574&q=80"
            alt=""
          />
        </div>
      </div>
    </div>
    <div
      class="row gx-4 row-cols-3 justify-content-md-center align-items-end overflow-hidden"
      id="banner-home-buttons"
    >
      <div class="col d-flex justify-content-center">
        <a href="/courses/new" class="btn btn-primary" id="banner-home-button"
          >Create Your Course</a
        >
      </div>
    </div>
  </div>
</div>

<div class="container" id="course-list">
  <div class="card-group">
    <h1>explore our courses</h1>
    <div class="row row-cols-3 gy-4">
      <!-- add card group -->
      <% courses.forEach(c=> { %>
      <div class="col d-flex justify-content-center">
        <div class="card display">
          <img
            src="https://images.unsplash.com/photo-1507838153414-b4b713384a76?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1740&q=80"
            class="card-img-top"
            alt="..."
          />
          <div
            class="card-body d-flex flex-column justify-content-between align-items-start"
          >
            <h5 class="card-title"><%= c.title %></h5>
            <p class="card-text"><%=c.welcomeMessage %></p>
            <a
              href="/courses/<%= c._id %>"
              class="btn btn-primary"
              id="card-button"
              >Learn More</a
            >
          </div>
        </div>
      </div>
      <% }) %>
    </div>
    <% if (!courses.length) { %>
    <br />
    <div class="col-12 d-flex justify-content-end">
      <img
        style="width: 80%"
        src="https://static.displate.com/857x1200/displate/2021-04-03/b3d4db426daf2effc431d54b026b90d3_cb54726c41c437f0c15762fcb528a422.jpg"
        alt="..."
      />
    </div>
    <% } %>
  </div>
</div>
<%- include('../partials/footer') %>

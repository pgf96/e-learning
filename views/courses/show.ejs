<!<%- include('../partials/header', {active: "" }) %>


<div class="container-fluid banner">
    <div class="container banner-container">
        <div class="row">
            <div class="col">
                <h1>
                    <%= course.title %>
                </h1>
                <ul>
                    <li>
                        <i class="bi bi-person"></i>
                        <%= course.user.name %>
                    </li>
                    <li>
                        <i class="bi bi-globe-americas"></i> English
                    </li>
                </ul>
            </div>
            <p><%= course.welcomeMessage %></p>
            <p><%= course.user.createdAt %></p>
            <p><%= course.user.createdAt %></p>
        </div>

    </div>
</div>



<div class="container">
    <div class="row">
        <div class="col-3">
            <h3>Outcomes</h3>
            <ul>
                <% course.outcomes.forEach(function(outcome) { %>
                    <li>
                        <%= outcome %>
                    </li>
                    <% }) %>
            </ul>
        </div>
        <div class="col-9">
            <ul>
                <h3>Description</h3>
                <p id="description"> <%= course.description %></p>
                <li>
                    title: <%= course.title %>
                </li>
                <li>
                    created user: <%= course.user._id %>
                        email: <%= course.user.email %>
                </li>
                <li>
                    logged in user: <%= user._id %>
                        email: <%= user.email %>
                </li>   

            </ul>
            <% if (user && course.user._id.equals(user._id)) { %>
                <p>
                <form action="/courses/<%= course._id %>?_method=DELETE" method="POST">
                    <button type="submit"> X </button>
                </form>
                </p>
                <% } %>
        </div>
    </div>

    <div class="row justify-content-md-center">
        <div class="col-4 border-bottom border-2 border-dark" style="--bs-border-opacity: .12;"></div>
    </div>
    
    <div class="row">
        <div class="col">
            <% if (course.contents.length) { %>
            <% let i=1; %>
                    <div class="accordion" id="accordionExample">
                        <h3>Content</h3>
                    <% course.contents.forEach(function(con) { %>
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="heading<%=i %>">
                                    <button class= "accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#collapse<%=i %>" aria-expanded="<%= (parseInt(i) == 1) ? "true" : "false" %>"
                                        aria-controls="collapse<%=i %>">
                                        <%=i %> . <%=con.sectionTitle %>
                                    </button>
                                </h2>
                                <div id="collapse<%=i %>" class="accordion-collapse <%= (parseInt(i) == 1) ? "collapse" : "collapse" %>"
                                    aria-labelledby="heading<%=i %>">
                                    <div class="accordion-body">
                                        <ul>
                                            <p>
                                                description: <%= con.description %>
                                            </p>
                                            <li>
                                                description: <%= con.description %>
                                            </li>
                                            <li>
                                                content: <%= con.sectionTitle %>
                                            </li>
                                            <div> <%- con.body %>   </div> 
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <% i++ %>
                                <% }) %>
                    </div>
                    <% } else { %>
                        <h4>no content added</h4> </div>
                        <% } %>
        </div>
    </div>
</div>



<%- include('../partials/footer') %>

